<%= form_with model: [@post, @post.comments.build] do |f| %>
  
  <div class="col-sm-8">
    <%= f.text_area :body, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.select(:status, [['Unpublished', :unpublished], ['Published', :published]]) %>
  </div>
  <% if logged_in? %>
    <div class="actions">
      <%= f.submit class: 'btn btn-black' %>
    </div>
  <% else %>
    <%= link_to "Sign Up", new_author_path %> or
    <%= link_to "Log In", new_session_path %>
  <% end %>
<% end %>
