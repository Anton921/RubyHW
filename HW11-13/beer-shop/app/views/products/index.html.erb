<h1>Products</h1>

<div>
  <%= link_to 'New Product', new_product_path, class: 'btn btn-primary' %>
</div>

<div>
  <table>
    <tbody>
      <% @products.each do |products| %>
        <tr>
          <td>
            <dl>
              <dt> <%= products.title %> </dt>
              <dt> <%= products.content %> </dt>
              <dt> <%= products.price %> </dt>
            </dl>
          </td>
          <td>
            <%= image_tag("#{products.image}") %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>